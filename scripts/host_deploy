# This script will sit on the host you want to deploy the site too.
# This should live wherever the home directory is

cd ~
rm -rf StockIndexTickersApi
git clone https://github.com/RyanMKrol/StockIndexTickersApi.git
cd StockIndexTickersApi
git pull
npm install
npm run build
pm2 delete StockIndexTickersApi
pm2 start build/bin/www.js --name StockIndexTickersApi
pm2 save
